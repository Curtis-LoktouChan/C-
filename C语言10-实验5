/*任务1:求出1~100之和，1~100中偶数之和、1~100中的奇数之和。*/
#include<stdio.h> 
int main()
{int i,sum,sum1;
for(i=0;i<=100;i++)
{
sum+=i;}//也可以表示为sum=sum+i。 
printf("1~100和为：%d\n",--sum);
sum1=sum/2;
printf("1~100中偶数之和:%d\n",sum1);
printf("1~100中奇数之和:%d\n",sum1);
return 0;}

/*任务2：) 输入一行字符
分别统计出其中英文字母、空格、数字和其他字符的个数*/
#include<stdio.h>
int main()
{
char x;
int a=0,b=0,c=0,d=0;
printf("请输入一行字符：\n");
while((x=getchar())!='\n')//不要输入enter键的时候。 
{
if((x>='a'&&c<='z')||(x>='A'&&c<='Z'))//如果c是字母. 
a++;
else if(x>='0'&&c<='9')//c是数字的时候。 
b++;
else if(x==' ')//c是空格的时候 
c++;
else
d++;}
printf("字母=%d,数字=%d,空格=%d,其他=%d\n",a,b,c,d);
return 0;}

//任务3：求Fibonacci数列前40项
#include "stdio.h"
int main(){
int f1,f2,i;
 f1 = 1;	
 f2 = 1;
 for(i = 1;i<=20;i++){//循环20次，一次两个，结果为前40项。 
		printf("%-12d%-12d",f1,f2);//加个-左对齐，12表示列宽12，使得数据整齐 
		f1=f1+f2;
		f2=f2+f1;
if(i % 2 == 0)//一行四个排列,美观。
			printf("\n");}
 return 0;}
 
/*任务3用数组来求斐波那契数列*/
 #include<stdio.h>
int main()
{int i, a[40];
 a[0]=1;a[1]=1;
 printf("%d\t\t%d\t\t",a[0],a[1]);
 for(i=2;i<=39;i++)
     {
      a[i]=a[i-1]+a[i-2];
      printf("%d\t\t",a[i]);
      if((i+1)%5==0)
      printf("\n");
	  }
  return 0; } 
 

   #include <stdio.h>
#include <math.h>
/*任务4：求PI值*/
int main() {
	int  y = -1, i;
	double x = 0, z, m, k;
	m = pow(10, -7);
	for (i = 1;; i++, i++) 
	{
		y *= -1;//负号变换 
		k = pow(i, -1);//每一项的绝对值 
		x +=  k * y;//每一项相加 
		if (k < m)
		 {
			printf("%.10f\n", 4 * x);
			break;	
		}
	}
	return 0;}

/*任务5:输出所有的"水仙花数"
指一个3位数,其各位数字立方和等于该数本身。*/
#include <stdio.h>
int main()
{
    int a,b,c, n;
    printf("result is:");
    for( n=100; n<1000; n++ )  /*整数的取值范围*/
    {
        a = n/100;//计算百位数 
        b = (n-a*100) / 10;//计算十位数 
        c = n % 10;//计算个位数 
        if(n ==a*a*a+b*b*b+c*c*c)
            printf("%d  ", n);}
    printf("是水仙花数\n");
   return 0;} 
   
   
