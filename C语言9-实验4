# include<stdio.h>
/*任务1：计算并输出下列分段函数的值具体要求： 
① 所有变量定义成双精度类型； 
② 键盘输入数据前要有提示； 
③ 分别输入 x=-2.0，1.0，2.3，12 运行程序，要求输入数据的形式为：
x=具体值<回车> 
④ 结果的输出形式采用以下形式。
x=具体值，y=具体值*/
int main()
{double x,y;
printf("请输入数字");
scanf("%lf",&x);
if(x<1)
y=x;
else
if(x<10)
y=2*x-11;
else
y=3*x-11;
printf("输入的x为：%lf\n",x);
printf("y=%lf\n",y);
return 0;
}

/*任务2：编企业发放奖金根据利润来提成：利润低于或者等于10万元的，奖金可提成10%；
利润高于10万元低于20万元时，低于10万的部分按10%提成，高于10万的部分，可提成7.5%；
20万到40万之间时，高于20万的部分按5%提成；
40万到60万之间时，高于40万的部分按3%提成；
60万到100万之间时，高于60万部分的按1.5%提成；
高于100万元时的部分按照1%提成。
从键盘上输入当月的利润，求应发的奖金总数.（要求分别用if语句和switch语句实现）*/
#include <stdio.h>
#include <stdlib.h>
int main() {
	int z;
	double x, y;
	printf("请输入你的利润(单位：万元)：");
	scanf("%lf", &x);
	z = x / 10;
	if (x < 0) {
		printf("输入的数据有误，请重新输入！");
		exit(0);
	}
	switch (z) {
		case 0:
			y = x / 10;
			break;
		case 1:
			y = 1 + (x - 10) / 0.075;
			break;
		case 2:
			y = 1.75 + (x - 20 / 0.05);
			break;
		case 3:
			y = 1.75 + (x - 20 / 0.05);
			break;
		case 4:
			y = 2.75 + (x - 40) / 0.03;
			break;
		case 5:
			y = 2.75 + (x - 40) / 0.03;
			break;
		case 6:
			y = 3.35 + (x - 60) / 0.015;
			break;
		case 7:
			y = 3.35 + (x - 60) / 0.015;
			break;
		case 8:
			y = 3.35 + (x - 60) / 0.015;
			break;
		case 9:
			y = 3.35 + (x - 60) / 0.015;
			break;
		default:
			y = 3.95 + (x - 100) / 0.01;
			break;
	}
	printf("应该发的奖金数目为：%.4f万元", y);
	return 0;
}

# include<stdio.h>
/*任务3:编写程序，判断某一年是否为闰年，
需要满足以下条件中的任意一个：
① 该年份能被 4 整除同时不能被 100 整除；
② 该年份能被400整除。*/
int main()
{int x,y;
printf("请输入年份：");
scanf("%d",&x);
if(x<0)
printf("输入错误！");
else
if(x%4==0&&x%100!=0||x%4==0)
printf("%d是闰年",x);
else
printf("%d不是闰年\n",x);
return 0;
}


# include<stdio.h>
/*任务4：编写程序，找出5个整数中的最大数和最小数
并输出找到的最大数和最小数。*/
int main()
{
int a,b,c,d,e,x; 
printf("请输入5个整数：");
scanf("%d %d %d %d %d",&a,&b,&c,&d,&e);
if(a>b){x=a;
a=b;
b=x;}
 if(a>c) {
      x = a;
        a = c;
        c = x;
    }
    if(a>d){
        x = d;
        a = d;
        d=a;
    }
if(a>e){x=a;
a=e;
e=x;
}
if(e<d){x=e;
e=d;
d=x;
}
if(e<c){x=e;
e=c;
c=x;
}
if(e<b){x=e;
e=b;
b=e;
}
if(e<a){x=e;
e=a;
a=x;
}
printf("最大数为：%d\n最小数为：%d",e,a);
return 0;
}


# include<stdio.h>
/*任务5:某商场节假日举行打折促销活动，给与顾客购物的折扣率如下： 
购物金额<100 元                 不打折 
100 元≤购物金额<500 元         9 折 
500 元≤购物金额<1000 元         8 折 
购物金额≥1000 元                5 折 
编程完成下面具体要求： 
① 能够输入某位顾客的购物金额，输入之前要有提示信息。 
② 依据输入的购物金额，输出这位顾客的打折率、购物实际应付款金额。 
③ 在输出结果时要有文字说明，输出购物实际付款金额时取小数点后 2 位。*/
int main()
{double x,y;
int a;
printf("请输入购物金额：");
scanf("%lf",&x);
if(x<100){
a=0;
printf("不打折，购物实际应付金额%8.2f\n",x);}

if(x>=100&&x<500)
{
a=9;
y=0.1*a*x;
printf("打%d折,购物实际应付金额%8.2f\n",a,y);}

if(x>=500&&x<1000){

a=8;
y=0.1*a*x;
printf("打%d折,购物实际应付金额%8.2f\n",a,y);}

if(x>=1000)
{
a=5;
y=0.1*a*x;
printf("打%d折,购物实际应付金额%8.2f\n",a,y);}
return 0;
}
