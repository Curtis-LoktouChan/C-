/*第一小题正确答案：*/
#include<stdio.h>
int sum(int,int);//声明函数 
int main()
{
int x,y,f;
scanf("%d %d",&x,&y);
f=sum(x,y);//调用函数 
printf("%d\n",f);
return 0;
}
int sum(int a,int b)//定义函数 
{int c;
c=a+b;
return(c);}

/*输入下面程序，分析运行结果：8、17*/
#include<stdio.h>
int func (int ,int);//声明函数
int main ( )
{	int k=4,m=1,p1,p2;
	p1=func(k,m) ; 
	p2=func(k,m) ;
	printf("%d,%d\n",p1,p2) ;
	return 0;}
int func (int a,int b)//定义函数
{   static int m=0,i=2;
    i+=m+1;
    m=i+a+b;
    return (m);}
